<% unless @input %>
  <% @input = Input.new %>
<% end %>
<%= form_for(@input, remote: true) do |f| %>
  <% if @input.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@input.errors.count, "error") %> prohibited this input from being saved:</h2>

      <ul>
      <% @input.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :sentence, {placeholder: "e.g It can have a name", id: @input.id.to_s + "_sentence", class: "sentence"} %>
  </div>
<% end %>